@model IEnumerable<Category>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6" style="text-align:right">
            <a class="btn btn-primary" asp-action="Create">
                <i class="fa-solid fa-plus"></i> Create new category
            </a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" width="100%">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Order
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="50%">
                            @item.Name
                        </td>
                        <td width="30%">
                            @item.DisplayOrder
                        </td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a class="btn btn-primary mx-2" asp-route-Id="@item.Id" asp-action="Edit"><i class="fa-solid fa-pen-to-square"></i></a>
                                <a class="btn btn-danger mx-2" asp-route-Id="@item.Id" asp-action="Delete"><i class="fa-solid fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No category exists.</p>
    }
</div>