@model IEnumerable<Product>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6" style="text-align:right">
            <a class="btn btn-primary" asp-action="Upsert">
                <i class="fa-solid fa-plus"></i> Create new product
            </a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" width="100%">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        ApplicationType
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="30%">
                            @item.Name
                        </td>
                        <td width="10%">
                            @item.Price
                        </td>
                        <td width="20%">
                            @item.Category.Name
                        </td>
                        <td width="20%">
                            @item.ApplicationType.Name
                        </td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a class="btn btn-primary mx-2" asp-route-Id="@item.Id" asp-action="Upsert"><i class="fa-solid fa-pen-to-square"></i></a>
                                <a class="btn btn-danger mx-2" asp-route-Id="@item.Id" asp-action="Delete"><i class="fa-solid fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No category exists.</p>
    }
</div>